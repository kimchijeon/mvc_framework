{% extends 'base.html.twig' %}

{% block title %}Books{% endblock %}

{% block content %}
<table>
    <tr>
        <th>Title</th>
        <th>Author</th>
        <th>ISBN</th>
        <th>Image</th>
    </tr>
    {% for book in books %}
    <tr>
        <td>{{ book.title }}</td>
        <td>{{ book.author }}</td>
        <td>{{ book.isbn }}</td>
        <td><a href="{{ book.image }}" style="text-decoration:none;">&#128247;</a></td>
    </tr>
    {% endfor %}
</table>
{% endblock %}
